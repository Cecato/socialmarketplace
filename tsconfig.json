{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", "**/*.tsx", 
    ".next/types/**/*.ts", 
    "src/app/api/tasks/route.tsx", 
    "src/app/api/tasks/[id]/route.tsx", 
    "src/libs/mongodb.tsx",
    "src/models/product.tsx"],
  "exclude": ["node_modules"]
}
